<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/IO_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/mainButton"
        android:fontFamily="@font/geo"
        android:onClick="startProblem"
        android:text="I/O"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/CON_button"
        app:layout_constraintEnd_toStartOf="@+id/VAR_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/VAR_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/mainButton"
        android:fontFamily="@font/geo"
        android:onClick="startProblem"
        android:text="VARIABLES"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/DATA_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IO_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CON_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/mainButton"
        android:fontFamily="@font/geo"
        android:onClick="startProblem"
        android:text="CONTROL STRUCTURES"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/FUN_button"
        app:layout_constraintEnd_toStartOf="@+id/DATA_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IO_button" />

    <Button
        android:id="@+id/DATA_button"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/mainButton"
        android:fontFamily="@font/geo"
        android:onClick="startProblem"
        android:text="DATA STRUCTURES"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/OOP_button"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CON_button"
        app:layout_constraintTop_toBottomOf="@+id/VAR_button" />

    <Button
        android:id="@+id/FUN_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/mainButton"
        android:fontFamily="@font/geo"
        android:onClick="startProblem"
        android:text="FUNCTIONS"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/scores_button"
        app:layout_constraintEnd_toStartOf="@+id/OOP_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CON_button" />

    <Button
        android:id="@+id/OOP_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/mainButton"
        android:fontFamily="@font/geo"
        android:onClick="startProblem"
        android:text="OBJECT ORIENTED PRINCIPLES"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/scores_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FUN_button"
        app:layout_constraintTop_toBottomOf="@+id/DATA_button" />

    <Button
        android:id="@+id/scores_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="8dp"
        android:text="Scores"
        android:onClick="showScores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>